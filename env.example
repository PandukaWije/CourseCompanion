# CourseCompanion Environment Variables
# Copy this file to .env and fill in your values:
# cp env.example .env

# ==================== Application ====================
APP_NAME=CourseCompanion
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ==================== Local Storage (replaces MongoDB) ====================
USE_LOCAL_STORAGE=true
STORAGE_DIR=data/storage

# ==================== Azure OpenAI ====================
# Primary configuration - using Azure OpenAI
USE_AZURE_OPENAI=true

# Get these from Azure Portal -> Azure OpenAI Service -> Keys and Endpoint
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Deployment names (create these in Azure OpenAI Studio)
AZURE_OPENAI_DEPLOYMENT_NAME=your-gpt4-deployment-name
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=your-embedding-deployment-name

# ==================== Legacy OpenAI (optional fallback) ====================
# Uncomment and use if not using Azure OpenAI
# USE_AZURE_OPENAI=false
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_MODEL=gpt-4
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ==================== Vector Search ====================
VECTOR_INDEX_NAME=course_content_index
EMBEDDING_DIMENSIONS=1536

# ==================== RAG Settings ====================
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5

# ==================== Agent Settings ====================
MAX_DISCOVERY_TURNS=5

# ==================== Frontend ====================
API_BASE_URL=http://localhost:8000

# ==================== CORS (comma-separated) ====================
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501,http://localhost:3000



